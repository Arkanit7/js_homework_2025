mixin Header(options = {})
  - const { search = false } = options;

  header.c-header
    .l-header
      .l-header__aside
        .l-header__sidebar-button
          button.c-burger.js-sidebar-toggle(type="button") 
            span.c-burger__icon
              span.c-burger__line

        a.c-header__brand(href=`${root}`) 
          img(src=`${root}images/js_logo.webp`, alt="")
          span.c-header__text JavaScript 2025

      .l-header__main
        if (search)
          .l-header__search
            +Search
        .l-header__theme
          +Toggle('js-theme-toggle')
